{
	"name": "directus-magic-link-auth",
	"description": "Secure passwordless authentication for Directus using magic links sent via email",
	"version": "0.9.0",
	"license": "MIT",
	"icon": "mail_lock",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-bundle"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "endpoint",
				"name": "magic-link-api",
				"source": "src/magic-link-api/index.ts"
			},
			{
				"type": "endpoint",
				"name": "magic-link-ui",
				"source": "src/magic-link-ui/index.ts"
			}
		],
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"add": "directus-extension add"
	},
	"dependencies": {
		"nodemailer": "^6.10.1",
		"nanoid": "^5.1.5"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "16.0.1",
		"@types/node": "^24.3.1",
		"typescript": "^5.9.2",
		"vue": "^3.5.21"
	}
}
